<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- *******************************************************
   Basic Style
   ******************************************************* -->
    <!-- MatchParent -->
    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- WrapContent -->
    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- WrapContent GravityCenter -->
    <style name="WrapContent.GravityCenter">
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- WrapContent ParentRight ParentTop -->
    <style name="WrapContent.ParentRightTop">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <!-- WrapContent ParentLeft ParentTop -->
    <style name="WrapContent.ParentLeftCenterVertical">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <!-- WrapContent CenterHorizontal CenterVertical -->
    <style name="WrapContent.CenterHorizonVertical">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- WrapContent CenterVerticalAlignRightTop -->
    <style name="WrapContent.CenterVerticalAlignRightTop">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
    <!-- ******************************************************* -->

</resources>
